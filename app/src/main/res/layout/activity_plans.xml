<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_plans"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2b2929"
    android:orientation="vertical"
    tools:context="edu.jru.deleon.deleonfitnessapp.Plans">


    <ImageView
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:src="@drawable/carrot1"
       android:layout_gravity="center"
        android:id="@+id/imageView5" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="WORKOUT PLANS"
        style="@style/Base.TextAppearance.AppCompat.Body2"
        android:textColor="#f8f201"
        android:id="@+id/textView4"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal|center_vertical"
        android:layout_below="@id/viewPager"
        android:id="@+id/SliderDots2">

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/textView4"
        android:layout_margin="10dp">

        <android.support.v4.view.ViewPager
            android:layout_width="wrap_content"
            android:layout_height="350dp"
            android:id="@+id/vpDemo"
           >

        </android.support.v4.view.ViewPager>



    </LinearLayout>
    </ScrollView>

    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="-500dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/home"
        android:id="@+id/btnHome"/>

</LinearLayout>
