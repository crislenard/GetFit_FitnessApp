<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.jru.deleon.deleonfitnessapp">

    <uses-feature android:name="android.hardware.Sensor" />
    <uses-feature android:name="android.hardware.SensorManager" />
    <uses-feature android:name="android.hardware.SensorEventListener" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".IntroActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:label="GetFit Main Menu"/>

        <activity android:name=".Pedometer"
            android:label="GetFit Pedometer"/>
        <activity android:name=".SplashScreen" />

        <service android:name=".MyService" android:enabled="true"/>
        <activity android:name=".Workout"
            android:label="GetFit Workout"/>
        <activity android:name=".Warmup"
            android:label="GetFit Warm Up"/>
        <activity android:name=".Plans"
            android:label="GetFit Plans"></activity>
    </application>

</manifest>